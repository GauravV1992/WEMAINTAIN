@using BusinessEntities.ResponseDto
@model IEnumerable<SubPackageResponse>
<div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="title" id="exampleModalLabel">Choose Package Type</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Category area starts -->
                <section class="category-area padding-top-10 padding-bottom-50">
                    <div class="container">
                        <div class="row">

                             @if(Model!=null && Model.Any())
                                {
                                foreach (var subpackage in Model)
                                {
                                <div class="col-3 single-category" style="text-align:center;padding:0px">
                                                <a asp-route-subPackageId="@subpackage.Id" asp-area="" asp-controller="OrderDetails" asp-action="Index">
                                                    <div class="style-02">
                                                        <div class="icon">
                                                           
                                                             <img src="~/subpackageImage/@(subpackage.Id+subpackage.Ext)"  class="img-fluid" alt="">
                                                          
                                                        </div>
                                            <div class="category-contents justify-content-center">
                                                            <span class="category-para"> @subpackage.Name </span>
                                                        </div>
                                                    </div>
                                                </a>
                                        </div>
                                     }}
                        </div>
                    </div>
                </section>
                <!-- Category area end -->
            </div>
        </div>
    </div>