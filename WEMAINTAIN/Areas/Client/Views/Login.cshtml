@{
    Layout = null;
}
@using BusinessEntities.RequestDto
@model LoginRequest
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>FIXMYSPACE</title>

    <!-- favicon -->
    <link rel=icon href="favicons.ico" sizes="16x16" type="icon/ico" />
    <!-- animate -->
    <link rel="stylesheet" href="assets/css/animate.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <!-- slick carousel  -->
    <link rel="stylesheet" href="assets/css/slick.css">
    <!-- LineAwesome -->
    <link rel="stylesheet" href="assets/css/line-awesome.min.css">
    <!-- Nice Select -->
    <link rel="stylesheet" href="assets/css/nice-select.css">
    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="assets/css/style.css">

</head>
<body>

    <!-- Signup area Starts -->
    <div class="signup-area padding-top-100 padding-bottom-100">
        <div class="container">
            <div class="signup-wrapper">
                <div class="signup-contents">
                    <h3 class="signup-title"> Sign Up </h3>
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "signup-forms", @id = "frmCreate" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="single-signup margin-top-30">
                            <label class="signup-label"> Mobile Number* </label>
                            @Html.TextBoxFor(model => model.MobileNo, new { @Class = "form-control",placeholder = "Mobile Number" })
                        </div>
                        <div class="single-signup margin-top-30">
                            <label class="signup-label"> Password* </label>
                            @Html.TextBoxFor(model => model.Password, new { @Class = "form-control",placeholder = "Password" })

                        </div>
                        <div class="signup-checkbox">
                            <div class="checkbox-inlines">
                                <input class="check-input" type="checkbox" id="check8">
                                <label class="checkbox-label" for="check8"> Remember me </label>
                            </div>
                            <div class="forgot-btn">
                                <a href="javascript:void(0)" class="forgot-pass"> Forgot Password </a>
                            </div>
                        </div>
                        <button type="submit"> Login Now </button>
                        <span class="bottom-register"> Don't have Account? <a class="resgister-link" href="javascript:void(0)"> Register </a> </span>
                    }
                </div>
            </div>
        </div>
    </div>


    <!-- Signup area end -->
    <!-- jquery -->
    <script src="assets/js/jquery-3.6.0.min.js"></script>
    <script src="assets/js/bootstrap.bundle.min.js"></script>

</body>

</html>
