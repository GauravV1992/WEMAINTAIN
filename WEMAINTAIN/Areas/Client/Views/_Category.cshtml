@using BusinessEntities.ResponseDto
@model IEnumerable<CategoryResponse>
<!-- Category area starts -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-8 col-md-10">
                <div class="section-title">
                <h2 class="title"> Catering to a diverse clientele @*<span class="title-color"> Package </span> *@</h2>
                <span class="section-para"> We are providing one stop solution for all kinds of maintenance, because maintenance should be hassle-free.</span>
                </div>
            </div>
        </div>
        <div class="row margin-top-50">
          @*<div class="col-lg-12">*@
                @*<div class="category-slider dot-style-one">*@
                    @if(Model!=null && Model.Any())
                    {
                    foreach (var package in Model)
                    {
                        <div class="single-category-item col-lg-6">
                        <a href="#" onClick="LoadSubPackageSection(@package.Id)">
                             <div class="single-category">
                                    <div class="icon">
                                        @*<i class="flaticon-mop"></i>*@
                                        @if (@package.Ext != null)
                                        {
                                            <img src="~/categoryImage/@package.Id+@package.Ext" width="60" height="60" class="img-fluid" alt="">
                                        }
                                        else
                                        {
                                            <img src="~/img/NoImage100.jpg" width="60" height="60" class="img-fluid" alt="NoImage">
                                        }
                                    </div>
                                    <div class="category-contents">
                                        <h4 class="category-title"> @package.Name </h4>
                                        <span class="category-para"> 5+ Service </span>
                                    </div>
                                </div>
                        </a>
                        </div>
               
            }
                    }
              @*  </div>*@
           @*</div>*@
        </div>
    </div>
