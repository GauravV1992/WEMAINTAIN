@using BusinessEntities.ResponseDto
@model IEnumerable<CategoryResponse>
<!-- Category area starts -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-8 col-md-10">
            <div class="section-title">
                <h2 class="category-para"> CATERING TO A DIVERSE CLIENTELE @*<span class="title-color"> Package </span> *@</h2>
                <span class="section-para">
                    We are providing one stop solution for all kinds of maintenance, because maintenance should be hassle-free.
                    Weather it be your home, office or insitutional space we have got it covered under one roof.
                </span>
            </div>
        </div>
    </div>
    <div class="row margin-top-50">
        @*<div class="col-lg-12">*@
        @*<div class="category-slider dot-style-one">*@
        @if (Model != null && Model.Any())
        {
            foreach (var package in Model)
            {
                <div class="single-category-item col-lg-4">
                    <a href="javascript:void(0)" onClick="LoadSubPackageSection(@package.Id)">
                        <div class="single-category">
                            <div class="icon" >
                                    <img src="~/categoryImage/@(package.Id+package.Ext)"  class="img-fluid" alt="">
                            </div>
                            <div class="category-contents  padding-top-10">
                                <h4 class="category-title"> @package.Name </h4>
                                <span class="category-para"> @package.Description </span>
                            </div>
                        </div>
                    </a>
                </div>

            }
        }
        @*  </div>*@
        @*</div>*@
    </div>
</div>
