@using BusinessEntities.RequestDto
@model CategoryRequest
@using (Html.BeginForm("Save", "Category", FormMethod.Post, new { @*enctype = "multipart/form-data",*@ @id = "frmCreate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="card" id="divCreate">
        <div class="card-header">
            Create Package
        </div>
         <div class="card-body">
        <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Package Name<span class="Required">*</span></label>
                @Html.TextBoxFor(model => model.Name, new { @Class = "form-control" , @maxlength ="50"})
        </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Description<span class="Required">*</span></label>
                @Html.TextBoxFor(model => model.Description, new { @Class = "form-control" , @maxlength ="100"})
            </div>
         <div class="mb-3">
                <label class="form-label" for="ImageUpload">Uplaod Image<span class="Required">*</span></label>
                <input type="file" class="form-control" id="Image" />
                
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-success btn-sm me-md-2">Save</button>
                <button type="button" onclick="OnCancel()" class="btn btn-sm btn-danger">Cancel</button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        OnCreateEditPageLoad();
    })
</script>