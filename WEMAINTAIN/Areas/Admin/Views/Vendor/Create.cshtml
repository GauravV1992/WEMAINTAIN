@using BusinessEntities.RequestDto
@model VendorRequest
@using (Html.BeginForm("Save", "Vendor", FormMethod.Post, new { @*enctype = "multipart/form-data",*@ @id = "frmCreate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="card" id="divCreate">
        <div class="card-header">
            Create Vendor
        </div>
         <div class="card-body">
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">Company Name<span class="Required">*</span></label>
                    @Html.TextBoxFor(model => model.CompanyName, new { @Class = "form-control",maxlength=100 })
                </div>
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">First Name<span class="Required">*</span></label>
                    @Html.TextBoxFor(model => model.FirstName, new { @Class = "form-control" ,maxlength=50  })
                </div>
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">Last Name<span class="Required">*</span></label>
                    @Html.TextBoxFor(model => model.LastName, new { @Class = "form-control",maxlength=50  })
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">Address<span class="Required">*</span></label>
                    @Html.TextBoxFor(model => model.Address, new { @Class = "form-control",maxlength=100  })
                </div>
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">Country<span class="Required">*</span></label>
                    @*@Html.TextBoxFor(model => model.Country, new { @Class = "form-control" })*@
                    @Html.DropDownListFor(model=>model.Country,new List<SelectListItem>(),new {@Class="form-select select2"})
                </div>
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">State<span class="Required">*</span></label>
                    @*@Html.TextBoxFor(model => model.State, new { @Class = "form-control" })*@
                    @Html.DropDownListFor(model=>model.State,new List<SelectListItem>(),new {@Class="form-select select2"})
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">City<span class="Required">*</span></label>
                    @Html.TextBoxFor(model => model.City, new { @Class = "form-control" ,maxlength=50  })
                </div>
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">GST</label>
                    @Html.TextBoxFor(model => model.GST, new { @Class = "form-control",maxlength=20  })
                </div>
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">Pincode<span class="Required">*</span></label>
                    @Html.TextBoxFor(model => model.Pincode, new { @Class = "form-control" ,maxlength=10 })
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">Email Address<span class="Required">*</span></label>
                    @Html.TextBoxFor(model => model.EmailAddress, new { @Class = "form-control" ,maxlength=100 })
                </div>
                <div class="mb-3 col-md-4">
                    <label for="exampleFormControlInput1" class="form-label">Phone<span class="Required">*</span></label>
                    @Html.TextBoxFor(model => model.Phone, new { @Class = "form-control" ,maxlength=20  })
                </div>
                <div class="mb-3 col-md-4">
                    <label class="form-label" for="Image">Uplaod Image</label>
                    <input type="file" class="form-control" id="Image" />
                </div>
            </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-success btn-sm me-md-2">Save</button>
                <button type="button" onclick="OnCancel()" class="btn btn-sm btn-danger">Cancel</button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    var Country = '';
    var State = '';
    $(document).ready(function () {
        OnCreateEditPageLoad();
    })
</script>