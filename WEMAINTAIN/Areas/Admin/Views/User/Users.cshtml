@using BusinessEntities.ResponseDto
@model UserResponse
@Html.AntiForgeryToken()
<div class="row d-none">
    <div class="col-md-12">
        <input value="Create" onclick="AddUser()" class="btn btn-primary btn-sm float-end" type="button" />
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="mb-3 col-md-12">
            <label for="exampleFormControlInput1" class="form-label">StartDate</label>
            @Html.TextBoxFor(model => model.StartDate, new {@Class = "form-control StartDate" })
        </div>  
    </div>
    <div class="col-md-4">
        <div class="mb-3 col-md-12">
            <label for="exampleFormControlInput1" class="form-label">EndDate</label>
            @Html.TextBoxFor(model => model.EndDate, new {@Class = "form-control EndDate" })
        </div>
    </div>
    <div class="col-md-4">
        <div class="mb-3 col-md-12">
            <label for="exampleFormControlInput1" class="form-label d-block" style="visibility:hidden">""</label>
            <input value="Search" onclick="BindUserDatatable()" class="btn btn-primary btn-md float-sm-start" type="button" />
        </div>
    </div>
    </div>
<div class="pt-2" id="divUser">
</div>
<h5>User List</h5>
<div class="row">
    <div class="col-md-12 pt-2">
        <section id="header">
            <div class="table-responsive">
            <table id="UserGrid" class="table table-bordered  table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>MobileNo</th>
                        <th>Username</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
            </div>
        </section>
    </div>
</div>
<script src="~/js/user.js" asp-append-version="true"></script>
<script type="text/javascript">
    $(function () {
         SetDateFormat();
        BindUserDatatable();
       
    });
</script>
