@using BusinessEntities.ResponseDto
@model IEnumerable<PurchaseServicesResponse>

<div class="row">
    <div class="col-md-12 pt-2">
        <table id="PurchaseDetailsGrid" class="table table-bordered">
            <thead>
                <tr class="tr">
                    <th>Service</th>
                    <th>AMC Period</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Rate</th>
                    <th>Discount</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.ServiceName</td>
                            <td>@obj.AMCPeriod</td>
                            <td>@obj.StartDate</td>
                            <td>@obj.EndDate</td>
                            <td>@(obj.EndDate > DateTime.Now ? "Active" : "InActive")</td>
                            <td>@obj.Rate</td>
                            <td>@obj.Discount</td>
                            <td>@obj.Total</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <button type="button" onclick="OnCloseDatatableEditRow()" class="btn btn-sm btn-danger">Close</button>
    </div>
</div>
