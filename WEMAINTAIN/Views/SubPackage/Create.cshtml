@using BusinessEntities.RequestDto
@model SubPackageRequest
@using (Html.BeginForm("Save", "SubPackage", FormMethod.Post, new { @id = "frmCreate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

        <div class="card" id="divCreate">
        <div class="card-header">
            Create Sub Package
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Select Package Name</label>
                @Html.DropDownListFor(model=>model.PackageId,new List<SelectListItem>(),new {@Class="form-select"})
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Sub Package Name</label>
                @Html.TextBoxFor(model => model.Name, new { @Class = "form-control" })
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Terms & Condition</label>
                @Html.TextAreaFor(model => model.TermsAndCondition, new { @Class = "form-control" })

            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-success btn-sm me-md-2">Save</button>
                <button type="button" onclick="OnCancel()" class="btn btn-sm btn-danger">Cancel</button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    var packageId = '';
    $(document).ready(function () {
        OnCreateEditPageLoad();
    })
</script>