@using BusinessEntities.RequestDto
@model PackageRateRequest
@using (Html.BeginForm("Save", "PackageRate", FormMethod.Post, new { @id = "frmCreate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

            <div class="card" id="divCreate">
                <div class="card-header">
                    Create Package Rate
                </div>
                <div class="card-body" id="divCreate">
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="exampleFormControlInput1" class="form-label">Package Name</label>
                    @Html.DropDownListFor(model=>model.PackageId,new List<SelectListItem>(),new {@Class="form-select"})
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="exampleFormControlInput1" class="form-label">Sub Package Name</label>
                    @Html.DropDownListFor(model=>model.SubPackageId,new List<SelectListItem>(),new {@Class="form-select"})
                        </div>
                         <div class="mb-3 col-md-4">
                                <label for="exampleFormControlInput1" class="form-label">AMC Period</label>
                    @Html.DropDownListFor(model=>model.AMCPeriod,new List<SelectListItem>{new SelectListItem{ Text="Select", Value = "" },
            new SelectListItem{ Text="Daily", Value = "Daily" },
                    new SelectListItem{ Text="Monthly", Value = "Monthly" },
            new SelectListItem{ Text="Quarterly", Value = "Quarterly" },
            new SelectListItem{ Text="Half Yearly", Value = "Half Yearly" },
            new SelectListItem{ Text="Yearly", Value = "Yearly" }
            },new {@Class="form-select"})
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="exampleFormControlInput1" class="form-label">Rate</label>
                    @Html.TextBoxFor(model => model.Rate, new { @Class = "form-control" })
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="exampleFormControlInput1" class="form-label">Discount</label>
                    @Html.TextBoxFor(model => model.Discount, new { @Class = "form-control" })
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="exampleFormControlInput1" class="form-label">Package Amount</label>
                    @Html.TextBoxFor(model => model.PackageAmount, new { @Class = "form-control" })
                        </div>
                    </div>
                    <div class="row">

                               <div class="mb-3 col-md-4">
                                <label for="exampleFormControlInput1" class="form-label">Service Name</label>
                    @Html.DropDownListFor(model=>model.ServiceId,new List<SelectListItem>(),new {@Class="form-select"})
                            </div>

                        </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-success btn-sm me-md-2">Save</button>
                        <button type="button" onclick="OnCancel()" class="btn btn-sm btn-danger">Cancel</button>
                    </div>
                </div>
            </div>
}

<script type="text/javascript">
    var packageId='';
     var subPackageId='';
    var serviceId = '';
    $(document).ready(function () {
        OnCreateEditPageLoad();
    })
</script>